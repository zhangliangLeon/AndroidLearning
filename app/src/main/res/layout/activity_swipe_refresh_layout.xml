        <ListView
            android:id="@+id/swipeRefreshListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>