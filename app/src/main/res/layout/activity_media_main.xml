<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Media.MediaMainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/MusicPlay"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="MusicPlay_MediaPlayer"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        >
    </Button>

    <Button
        android:id="@+id/MusicPlay_1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="MusicPlay_SoundPool"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        >
    </Button>

    <Button
        android:id="@+id/VideoPlay"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="VideoPlay_VideoView"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        >
    </Button>

    <Button
        android:id="@+id/Video_1Play"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="VideoPlay_MediaPalyer+SerfaceView"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        >
    </Button>
</LinearLayout>