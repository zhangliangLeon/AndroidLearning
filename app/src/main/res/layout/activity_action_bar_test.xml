<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionBar.ActionBarTestActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/CloseActionbarButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:background="@drawable/shapedrawable_test_3"
        android:text="关闭ActionBar"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp">
    </Button>

    <Button
        android:id="@+id/OpenActionbarButton"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:background="@drawable/shapedrawable_test_3"
        android:text="打开ActionBar"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp">
    </Button>
</LinearLayout>